<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.graphicsviewer.graphicsviewer.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/graphViewContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"></FrameLayout>

        <Button
            android:id="@+id/showFirstGraphButton"
            android:layout_width="match_parent"
            android:layout_height="10mm"
            android:layout_weight="0"
            android:text="Show first graph" />

        <Button
            android:id="@+id/showSecondGraphButton"
            android:layout_width="match_parent"
            android:layout_height="10mm"
            android:layout_weight="0"
            android:text="Show second graph" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
